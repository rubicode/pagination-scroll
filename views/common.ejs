<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Scroll Pagination using Javascript</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<body>
    <div class="container">
        <div id="list-item">

        </div>
    </div>
    <script>
        var page = 1;
        window.addEventListener('scroll', () => {
            const {
                scrollTop,
                scrollHeight,
                clientHeight
            } = document.documentElement;
            if (scrollTop + clientHeight >= scrollHeight - 1) {
                page++
                readData();
            }
        }, {
            passive: true
        });

        async function readData() {
            const response = await fetch(`http://localhost:3001?page=${page}`)
            const { data, pages } = await response.json()

            let html = ''
            data.forEach(item => {
                html += `
                <div class="card border-success mt-3">
                    <div class="card-header text-center">
                        <h1>${item._id}</h1>
                    </div>
                    <div class="card-body text-center">
                        <h2>${item.nama}</h2>
                    </div>
                </div>
                `
            });
            if (page <= pages) {
                if (page === 1) {
                    document.getElementById('list-item').innerHTML = html
                } else {
                    const prevHtml = document.getElementById('list-item').innerHTML
                    document.getElementById('list-item').innerHTML = prevHtml + html
                }
            }
        }

        readData()
    </script>
</body>

</html>